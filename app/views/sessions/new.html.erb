<% @_page_title = "登录" %>

<%= render "public/header1" %>

<div class="index_login">
	<div class="login_tit"><span>登录万国网校</span></div>
	 <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {}) do |f| %>
		  <table width="880" border="0" cellspacing="0" cellpadding="0" class="index_reg">
		<tr>
		<% flash.each do |name, msg| %>
		  <td align="right"  height="20"> </td>
		  <td> <span>&nbsp;</span><%= content_tag :p, msg, :class => "cor_red" if msg.is_a?(String) %></td>
		  <% end %>
		</tr>
		<tr>
		  <td width="8%" height="35"  align="right"><%= f.label :login, "用 户 名：" %></td>
		  <td width="92%" height="35" align="left" style="color:#999;"><%= f.text_field :login, :class => "userkk", :placeholder => "请输入您的用户名或邮箱" %></td>
		</tr>
		<tr>
		  <td height="35" align="right"><%= f.label :password, "密  码：" %></td>
		  <td height="35" align="left" style="color:#999;"><%= f.password_field :password, :class => "userkk", :placeholder => "请输入您的密码" %> <a href="modify.html"><%= link_to "忘记密码？", new_user_password_path, :class => "login_2a" %></a></td>
		</tr>
				<tr>
		<td height="35" align="right"></td>
		<td height="35" align="left"> <% if devise_mapping.rememberable? -%>
       <%= f.check_box :remember_me %>记住账户
        <% end -%></td>
		</tr>
		<tr>
		  <td height="50" align="right" class="dashedup"> </td>
		  <td height="50" align="left" class="dashedup"><%= f.submit "", :class => "dlbut", :value=> "登 录"  %>
			  <a href="javascript:void(0)" onclick="login()">login</a><span class="cored" style="display:none;">用户名或密码错误</span></td>
		</tr>
		<tr>
		  <td height="50" align="right" class="dashedup"> </td>
		  <td height="50" align="left" class="dashedup">还没有用户名？<a href="<%= new_user_registration_path %>" style="color:red"><b>立即注册</b></a> </td>
		</tr>		
		<tr>
		  <td height="35" align="right">
		   </td>
		  <td height="35" align="left"> </td>
		</tr>
	  </table>
	  <% end -%>
	  
</div>
<script type="text/javascript" charset="utf-8">
function login() {
	alert($("#new_user").serialize());
	$.post("/users/sign_in.json", $("#new_user").serialize(), function(data) {
		alert(data);	
	});
}
</script>

<%= render "public/footer1" %>