
<% @_page_title = "忘记密码" %>

<%= content_for :stylesheets do -%>
<link href="<%= GlobalSettings.css_domain %>css/public.css" rel="stylesheet" type="text/css" />	
<% end -%>

<%= render "public/header1" %>


<div class="index_login" id="main">
	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "forgotForm" }) do |f| %>
	<div class="login_tit"><span>忘记密码</span></div>
    <table width="880" border="0" cellspacing="0" cellpadding="0" class="index_reg">
    <tr>
      <td align="right"  height="20"> </td>
      <td> </td>
    </tr>
    <tr>
      <td width="8%" height="35" align="right"><%= f.label :name, "用 户 名：" %></td>
      <td width="92%" height="35" align="left" style="color:#999;"><%= f.text_field :name, :autofocus => true, :class => "userkk", :placeholder => "请输入您的用户名" %></td>
    </tr>
    <tr>
      <td height="35" align="right"><%= f.label :email, "电子邮箱：" %></td>
      <td height="35" align="left" style="color:#999;"><%= f.text_field :email, :class => "userkk" , :placeholder => "请输入您的注册邮箱" %></td>
    </tr>
    <tr>
      <td height="70" align="right" class="dashedup"> </td>
      <td height="70" align="left" class="dashedup"><%= f.submit "提 交", :class => "dlbut" %> <span class="cored" style="display:none;">用户名和注册邮箱不匹配!</span></td>
    </tr>
    <tr>
      <td height="35" align="right"> </td>
      <td height="35" align="left"> </td>
    </tr>
  </table>
  <% end %>
</div>
<%= render "public/footer1" %>
